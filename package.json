{
  "name": "ng2-loading-spinner-app",
  "version": "1.2.0",
  "scripts": {
    "start": "ng serve",
	"build-ng":"ng-packagr -p package.json",
    "build:lib": "ng build --prod ng2-loading-spinner",
    "npm-pack": "cd ./dist/ng2-loading-spinner && npm pack",
    "package": "npm run build:lib && npm run npm-pack",
    "build:ghpage": "ng build --prod --base-href 'https://me-majidi.github.io/ng2-loading-spinner/'",
    "publish:ghpage": "ngh --dir dist/ng2-loading-spinner-app --message='Update gh-page' --branch=gh-pages --repo='git@github.com:me-majidi/ng2-loading-spinner.git'"
  },
  "$schema": "./node_modules/ng-packagr/package.schema.json",
  "ngPackage": {
    "lib": {
      "entryFile": "src/main.ts"
    }
  },
  "private": true,
  "peerDependencies": {
    "@angular/animations": "^7.1.2",
    "@angular/common": "^7.1.2",
    "@angular/compiler": "^7.1.2",
    "@angular/core": "^7.1.2",
    "@angular/forms": "^7.1.2",
    "@angular/http": "^7.1.2",
    "@angular/platform-browser": "^7.1.2",
    "@angular/platform-browser-dynamic": "^7.1.2",
    "@angular/pwa": "^0.7.2",
    "@angular/router": "^7.1.2",
    "angular-cli-ghpages": "^0.5.3",
    "core-js": "^2.5.4",
    "ng2-loading-spinner": "^1.0.1",
    "ngx-color-picker": "^6.5.0",
    "rxjs": "^6.3.3",
    "rxjs-compat": "^6.2.2",
    "zone.js": "^0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.803.14",
    "@angular-devkit/build-ng-packagr": "~0.11.0",
    "@angular/cli": "^7.1.2",
    "@angular/compiler-cli": "^7.1.2",
    "@angular/language-service": "^7.1.2",
    "@types/jasmine": "~2.8.6",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "~8.9.4",
    "codelyzer": "~4.2.1",
    "jasmine-core": "~2.99.1",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~1.7.1",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.0",
    "karma-jasmine": "~1.1.1",
    "karma-jasmine-html-reporter": "^0.2.2",
    "ng-packagr": "^3.0.6",
    "protractor": "~5.3.0",
    "ts-node": "~5.0.1",
    "tsickle": "^0.34.0",
    "tslib": "^1.9.0",
    "tslint": "~5.9.1",
    "typescript": "^3.1.1"
  }
}
